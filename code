# Define a generic function
def data_comprehension(path):

    df = pd.read_csv(path,encoding='utf-8')
    print('Dataset dimension:'f'{df.shape}')
    print('Statistic---')
    print(df.describe())
    print('Type--')
    print(df.info())
    print('Duplicates--')
    print('Duplicates:'f'{df.duplicated().sum()}')
    print('NA--')
    print(df.isnull().sum())
    print(df.head())
    
# Training
